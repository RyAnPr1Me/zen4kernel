diff --git a/Makefile b/Makefile
index 1234567..abcdefg 100644
--- a/Makefile
+++ b/Makefile
@@ -600,6 +600,12 @@ KBUILD_CFLAGS += -march=znver4 -mtune=znver4
 # Enable AVX-512 for Zen 4
 KBUILD_CFLAGS += -mavx512f -mavx512dq -mavx512bw -mavx512vl -mavx512vnni
 
+# LLVM Polyhedral Loop Optimizer - Aggressive optimization for Zen4
+ifdef CONFIG_CC_IS_CLANG
+KBUILD_CFLAGS += -mllvm -polly
+KBUILD_CFLAGS += -mllvm -polly-vectorizer=stripmine
+endif
+
 KBUILD_RUSTFLAGS-$(CONFIG_WERROR) += -Dwarnings
 KBUILD_RUSTFLAGS += $(KBUILD_RUSTFLAGS-y)
 
diff --git a/init/Kconfig b/init/Kconfig
index 1234567..abcdefg 100644
--- a/init/Kconfig
+++ b/init/Kconfig
@@ -1570,6 +1570,16 @@ config ZEN4_GAMING_OPTS
 	  This option enables aggressive optimizations specifically tuned for
 	  Zen 4 gaming performance.
 
+config LLVM_POLLY
+	bool "Enable LLVM Polyhedral Optimizations"
+	depends on CC_IS_CLANG
+	help
+	  Enable LLVM's Polly optimizer for advanced loop optimizations.
+	  This can improve performance for compute-intensive workloads.
+	  
+	  Requires Clang/LLVM to build.
+	  
+	  If unsure, say Y for maximum performance.
 
 endmenu		# General setup
